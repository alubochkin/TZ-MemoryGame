{
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "react/jsx-one-expression-per-line": [ 0, { "allow": "none"}],
    "linebreak-style": 0,
    "global-require": 1,
    "eslint linebreak-style": [0, "error", "windows"],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "no-restricted-imports": [
      "error"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "jsx-quotes": [1, "prefer-single"],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "indent": ["error", 2],
    "no-cond-assign": ["error", "always"],
    "react/prop-types": 0
  }
}